# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /liste                      controllers.BouteillesController.getBottleList()
GET     /liste/rouge                controllers.BouteillesController.getRedBottleList()
GET     /liste/rose                 controllers.BouteillesController.getRoseBottleList()
GET     /liste/blanc                controllers.BouteillesController.getWhiteBottleList()

GET     /bottle/:id                 controllers.BouteillesController.bottleDetails(id: Long)

GET     /bottle/delete/:id          controllers.BouteillesController.deleteBottle(id: Long)

GET     /addBouteille               controllers.BouteillesController.addBottle()
POST    /addBouteille               controllers.BouteillesController.doAddBottle()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
